{
  "name": "ai-generator-app",
  "private": true,
  "scripts": {
    "build": "remix vite:build",
    "build:extension": "vite build --config vite.extension.config.js",
    "dev": "shopify app dev",
    "dev:extension": "vite build --watch --config vite.extension.config.js",
    "dev:full": "concurrently \"npm run dev:extension\" \"shopify app dev\"",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy:dev": "shopify app deploy --config=shopify.app.dev.toml",
    "deploy:staging": "shopify app deploy --config=shopify.app.staging.toml",
    "deploy:production": "shopify app deploy --config=shopify.app.production.toml",
    "config:use:dev": "shopify app config use shopify.app.toml",
    "config:use:staging": "shopify app config use shopify.app.staging.toml",
    "config:use:production": "shopify app config use shopify.app.production.toml",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js --host 0.0.0.0",
    "docker-start": "npm run setup && npm run start",
    "setup": "drizzle-kit generate && drizzle-kit migrate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "shopify": "shopify",
    "drizzle": "drizzle-kit",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "fly:deploy:staging": "fly deploy --config=fly.staging.toml",
    "fly:deploy:production": "fly deploy --config=fly.toml",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run lint && npm run typecheck"
  },
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.844.0",
    "@fal-ai/client": "^1.5.0",
    "@hookform/resolvers": "^5.1.1",
    "@libsql/client": "^0.15.10",
    "@remix-run/dev": "^2.16.1",
    "@remix-run/fs-routes": "^2.16.1",
    "@remix-run/node": "^2.16.1",
    "@remix-run/react": "^2.16.1",
    "@remix-run/serve": "^2.16.1",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/app-bridge-ui-types": "^0.2.1",
    "@shopify/polaris": "^12.0.0",
    "@shopify/react-form": "^2.7.3",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage": "^3.0.18",
    "@shopify/shopify-app-session-storage-drizzle": "^2.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.40.0",
    "fast-equals": "^5.2.2",
    "file-type": "^21.0.0",
    "immer": "^10.1.1",
    "isbot": "^5.1.0",
    "jimp": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.0",
    "react-hook-form": "^7.60.0",
    "zod": "^3.25.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@remix-run/eslint-config": "^2.16.1",
    "@remix-run/route-config": "^2.16.1",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "typescript": "5.4",
    "vite": "^6.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  },
  "author": "dennisvandalen"
}
